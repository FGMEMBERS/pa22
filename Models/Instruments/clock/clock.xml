<?xml version="1.0"?>

<PropertyList>

  <path>clock.ac</path>

  <animation>
    <type>material</type>
    <object-name>Circle</object-name>
    <object-name>hour_hand</object-name>
    <object-name>min_hand</object-name>
    <object-name>sec_hand</object-name>
    <emission>
      <red>1.0</red>
      <green>0.6</green>
      <blue>0.3</blue>
      <factor-prop>sim/model//material/instruments/factor</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>sec_hand</object-name>
    <property>instrumentation/clock/indicated-sec</property>
    <factor>6</factor>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>min_hand</object-name>
    <property>instrumentation/clock/indicated-sec</property>
    <factor>0.1</factor>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>hour_hand</object-name>
    <property>instrumentation/clock/local-hour</property>
    <factor>30</factor>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>hour_hand</object-name>
    <property>instrumentation/clock/local-hour</property>
    <factor>0.5</factor>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
  </animation>

<!-- *** LoD *** -->
  <animation> 
    <type>range</type>
    <min-m>0</min-m>
    <max-m>30</max-m>
  </animation>

</PropertyList>
